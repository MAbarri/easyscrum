<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings 
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
    version="2.0">

    <entity class="com.sqli.easyscrum.entity.Mail">

        <named-query name="GetUnreadCount">
            <query><![CDATA[
                select count(u)
                  from Mail u
                 where u.vue = 0 And
                 u.Reciever.userId = :ID
            ]]></query>
        </named-query>
        <named-query name="GetUnreadCountWParam">
            <query><![CDATA[
                select count(u)
                  from Mail u
                 where u.vue = 0 And
                 u.Reciever.userId = :ID And
                 u.mailtype=:PR
            ]]></query>
        </named-query>
        
        
    </entity>

</entity-mappings>